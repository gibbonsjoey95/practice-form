<%= form_with(model: @post, url: posts_path) do |form| %>
  <div>
    <%= form.label :name%>
    <%= form.text_field :name%>
  </div>

  <div>
    <%= form.label :email%>
    <%= form.email_field :email%>
  </div>

  <div>
    <%= form.label :comment%>
    <%= form.text_area :comment%>
  </div>

  <div>
    <%= form.submit 'Create Post'%>
  </div>
<% end %>


